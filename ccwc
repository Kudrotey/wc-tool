#!/usr/bin/env python
import argparse
import os

def get_path(file_path):
    return f"./{file_path}"

def main():
    parser = argparse.ArgumentParser(description='Unix command line tool wc')
    parser.add_argument("-c", "--byte_count", metavar="file_name", help="Counts the number of bytes in a file")
    args = parser.parse_args()
    
    if args.byte_count:
        file_size = os.path.getsize(get_path(args.byte_count))
        print(file_size, args.byte_count)
    
        
if __name__ == "__main__":
    main()